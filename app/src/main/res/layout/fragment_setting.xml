<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_app_color"
    tools:context=".settings.view.SettingFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_screen_txt"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_margin="16dp"
            android:textSize="20sp"
            android:fontFamily="@font/merriweathersans_bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <include
            android:id="@+id/toolbar"
            layout="@layout/main_toolbar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/firstLinear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        >

                        <androidx.cardview.widget.CardView
                            android:id="@+id/locationNameCard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            app:cardCornerRadius="10dp"
                            android:elevation="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            >

                            <LinearLayout
                                android:id="@+id/gradientColorForTodayHour"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:background="@drawable/home_gradient_card"
                                android:orientation="horizontal" >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/location_txt"
                                    android:layout_margin="4dp"
                                    android:gravity="center"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/merriweathersans_semibold"
                                    android:textColor="@color/white"
                                    />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="10dp"
                            android:layout_margin="16dp"
                            android:elevation="10dp"
                            android:backgroundTint="@color/secondary_main_color"
                            app:layout_constraintTop_toBottomOf="@id/locationNameCard"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            >
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <RadioGroup
                                    android:id="@+id/locationGroup"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="16sp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    >
                                    <RadioButton
                                        android:id="@+id/gpsRB"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="@color/home_card_color"
                                        android:text="@string/gps_txt"
                                        android:fontFamily="@font/merriweathersans_regular"
                                        android:textColor="@color/white"
                                        android:textSize="12sp"
                                        android:layout_marginLeft="16dp"
                                        />
                                    <RadioButton
                                        android:id="@+id/mapRB"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="@color/home_card_color"
                                        android:text="@string/map_txt"
                                        android:fontFamily="@font/merriweathersans_regular"
                                        android:textColor="@color/white"
                                        android:textSize="12sp"
                                        android:layout_marginLeft="16dp"
                                        />
                                </RadioGroup>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.cardview.widget.CardView>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        >

                        <androidx.cardview.widget.CardView
                            android:id="@+id/languageNameCard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            app:cardCornerRadius="10dp"
                            android:elevation="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            >

                            <LinearLayout
                                android:id="@+id/gradientColor"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:background="@drawable/home_gradient_card"
                                android:orientation="horizontal" >
                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/language_txt"
                                    android:layout_margin="4dp"
                                    android:gravity="center"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/merriweathersans_semibold"
                                    android:textColor="@color/white"
                                    />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="10dp"
                            android:layout_margin="16dp"
                            android:elevation="10dp"
                            android:backgroundTint="@color/secondary_main_color"
                            app:layout_constraintTop_toBottomOf="@id/languageNameCard"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            >
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <RadioGroup
                                    android:id="@+id/languageGroup"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="16sp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    >
                                    <RadioButton
                                        android:id="@+id/englishRB"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="@color/home_card_color"
                                        android:text="@string/english_txt"
                                        android:fontFamily="@font/merriweathersans_regular"
                                        android:textColor="@color/white"
                                        android:textSize="12sp"
                                        android:layout_marginLeft="16dp"
                                        />
                                    <RadioButton
                                        android:id="@+id/arabicRB"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="@color/home_card_color"
                                        android:text="@string/arabic_txt"
                                        android:fontFamily="@font/merriweathersans_regular"
                                        android:textColor="@color/white"
                                        android:textSize="12sp"
                                        android:layout_marginLeft="16dp"
                                        />
                                </RadioGroup>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.cardview.widget.CardView>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/secondLinear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/firstLinear"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        >

                        <androidx.cardview.widget.CardView
                            android:id="@+id/tempNameCard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            app:cardCornerRadius="10dp"
                            android:elevation="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            >

                            <LinearLayout
                                android:id="@+id/gradientColor2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:background="@drawable/home_gradient_card"
                                android:orientation="horizontal" >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/temperature_txt"
                                    android:layout_margin="4dp"
                                    android:gravity="center"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/merriweathersans_semibold"
                                    android:textColor="@color/white"
                                    />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="10dp"
                            android:layout_margin="16dp"
                            android:elevation="10dp"
                            android:backgroundTint="@color/secondary_main_color"
                            app:layout_constraintTop_toBottomOf="@id/tempNameCard"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            >
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <RadioGroup
                                    android:id="@+id/tempGroup"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="16sp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    >
                                    <RadioButton
                                        android:id="@+id/celsiusRB"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="@color/home_card_color"
                                        android:text="@string/celsius_txt"
                                        android:fontFamily="@font/merriweathersans_regular"
                                        android:textColor="@color/white"
                                        android:textSize="12sp"
                                        android:layout_marginLeft="16dp"
                                        />
                                    <RadioButton
                                        android:id="@+id/kelvinRB"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="@color/home_card_color"
                                        android:text="@string/kelvin_txt"
                                        android:fontFamily="@font/merriweathersans_regular"
                                        android:textColor="@color/white"
                                        android:textSize="12sp"
                                        android:layout_marginLeft="16dp"
                                        />
                                    <RadioButton
                                        android:id="@+id/fahrenheitRB"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="@color/home_card_color"
                                        android:text="@string/fahrenheit_txt"
                                        android:fontFamily="@font/merriweathersans_regular"
                                        android:textColor="@color/white"
                                        android:textSize="12sp"
                                        android:layout_marginLeft="16dp"
                                        />
                                </RadioGroup>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.cardview.widget.CardView>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        >

                        <androidx.cardview.widget.CardView
                            android:id="@+id/windNameCard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            app:cardCornerRadius="10dp"
                            android:elevation="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            >

                            <LinearLayout
                                android:id="@+id/gradientColor3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:background="@drawable/home_gradient_card"
                                android:orientation="horizontal" >
                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/wind_speed_txt"
                                    android:layout_margin="4dp"
                                    android:gravity="center"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/merriweathersans_semibold"
                                    android:textColor="@color/white"
                                    />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="10dp"
                            android:layout_margin="16dp"
                            android:elevation="10dp"
                            android:backgroundTint="@color/secondary_main_color"
                            app:layout_constraintTop_toBottomOf="@id/windNameCard"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            >
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <RadioGroup
                                    android:id="@+id/windSpeedGroup"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="16sp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    >
                                    <RadioButton
                                        android:id="@+id/meterToSecRB"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="@color/home_card_color"
                                        android:text="@string/meter_sec_txt"
                                        android:fontFamily="@font/merriweathersans_regular"
                                        android:textColor="@color/white"
                                        android:textSize="12sp"
                                        android:layout_marginLeft="16dp"
                                        />
                                    <RadioButton
                                        android:id="@+id/milesToHourRB"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="@color/home_card_color"
                                        android:text="@string/miles_hour_txt"
                                        android:fontFamily="@font/merriweathersans_regular"
                                        android:textColor="@color/white"
                                        android:textSize="12sp"
                                        android:layout_marginLeft="16dp"
                                        />
                                </RadioGroup>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.cardview.widget.CardView>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/secondLinear"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        >

                        <androidx.cardview.widget.CardView
                            android:id="@+id/notificationNameCard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            app:cardCornerRadius="10dp"
                            android:elevation="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            >

                            <LinearLayout
                                android:id="@+id/gradientColor4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:background="@drawable/home_gradient_card"
                                android:orientation="horizontal" >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/notifications_txt"
                                    android:layout_margin="4dp"
                                    android:gravity="center"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/merriweathersans_semibold"
                                    android:textColor="@color/white"
                                    />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="10dp"
                            android:layout_margin="16dp"
                            android:elevation="10dp"
                            android:backgroundTint="@color/secondary_main_color"
                            app:layout_constraintTop_toBottomOf="@id/notificationNameCard"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            >
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <RadioGroup
                                    android:id="@+id/notificationGroup"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    >
                                    <RadioButton
                                        android:id="@+id/enabledRB"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="16sp"
                                        android:backgroundTint="@color/home_card_color"
                                        android:text="@string/enable_txt"
                                        android:fontFamily="@font/merriweathersans_regular"
                                        android:textColor="@color/white"
                                        android:textSize="12sp"
                                        android:layout_marginLeft="16dp"
                                        />
                                    <RadioButton
                                        android:id="@+id/disabledRB"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="16sp"
                                        android:backgroundTint="@color/home_card_color"
                                        android:text="@string/disable_txt"
                                        android:fontFamily="@font/merriweathersans_regular"
                                        android:textColor="@color/white"
                                        android:textSize="12sp"
                                        android:layout_marginLeft="16dp"
                                        />
                                </RadioGroup>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.cardview.widget.CardView>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        >

                        <androidx.cardview.widget.CardView
                            android:id="@+id/NameCard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            >

                            <LinearLayout
                                android:id="@+id/gradientColor5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:background="@color/main_app_color"
                                android:orientation="horizontal" >
                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Wind Speed"
                                    android:layout_margin="4dp"
                                    android:gravity="center"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/merriweathersans_semibold"
                                    android:textColor="@color/main_app_color"
                                    />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>