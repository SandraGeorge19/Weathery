<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_app_color"
    tools:context=".settings.view.SettingFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_margin="16dp"
            android:textSize="20sp"
            android:fontFamily="@font/merriweathersans_bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <include
            android:id="@+id/toolbar"
            layout="@layout/main_toolbar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/firstLinear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        >

                        <androidx.cardview.widget.CardView
                            android:id="@+id/locationNameCard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            app:cardCornerRadius="10dp"
                            android:elevation="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            >

                            <LinearLayout
                                android:id="@+id/gradientColorForTodayHour"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:background="@drawable/home_gradient_card"
                                android:orientation="horizontal" >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Location"
                                    android:layout_margin="4dp"
                                    android:gravity="center"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/merriweathersans_semibold"
                                    android:textColor="@color/white"
                                    />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="10dp"
                            android:layout_margin="16dp"
                            android:elevation="10dp"
                            android:backgroundTint="@color/secondary_main_color"
                            app:layout_constraintTop_toBottomOf="@id/locationNameCard"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            >
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <RadioGroup
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    >
                                    <RadioButton
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="@color/home_card_color"
                                        android:text="GPS"
                                        android:fontFamily="@font/merriweathersans_regular"
                                        android:textColor="@color/white"
                                        android:textSize="12sp"
                                        android:layout_marginLeft="16dp"
                                        />
                                    <RadioButton
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="@color/home_card_color"
                                        android:text="Map"
                                        android:fontFamily="@font/merriweathersans_regular"
                                        android:textColor="@color/white"
                                        android:textSize="12sp"
                                        android:layout_marginLeft="16dp"
                                        />
                                </RadioGroup>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.cardview.widget.CardView>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        >

                        <androidx.cardview.widget.CardView
                            android:id="@+id/languageNameCard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            app:cardCornerRadius="10dp"
                            android:elevation="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            >

                            <LinearLayout
                                android:id="@+id/gradientColor"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:background="@drawable/home_gradient_card"
                                android:orientation="horizontal" >
                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Language"
                                    android:layout_margin="4dp"
                                    android:gravity="center"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/merriweathersans_semibold"
                                    android:textColor="@color/white"
                                    />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="10dp"
                            android:layout_margin="16dp"
                            android:elevation="10dp"
                            android:backgroundTint="@color/secondary_main_color"
                            app:layout_constraintTop_toBottomOf="@id/languageNameCard"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            >
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <RadioGroup
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    >
                                    <RadioButton
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="@color/home_card_color"
                                        android:text="English"
                                        android:fontFamily="@font/merriweathersans_regular"
                                        android:textColor="@color/white"
                                        android:textSize="12sp"
                                        android:layout_marginLeft="16dp"
                                        />
                                    <RadioButton
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="@color/home_card_color"
                                        android:text="Arabic"
                                        android:fontFamily="@font/merriweathersans_regular"
                                        android:textColor="@color/white"
                                        android:textSize="12sp"
                                        android:layout_marginLeft="16dp"
                                        />
                                </RadioGroup>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.cardview.widget.CardView>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/secondLinear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/firstLinear"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        >

                        <androidx.cardview.widget.CardView
                            android:id="@+id/tempNameCard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            app:cardCornerRadius="10dp"
                            android:elevation="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            >

                            <LinearLayout
                                android:id="@+id/gradientColor2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:background="@drawable/home_gradient_card"
                                android:orientation="horizontal" >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Temperature"
                                    android:layout_margin="4dp"
                                    android:gravity="center"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/merriweathersans_semibold"
                                    android:textColor="@color/white"
                                    />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="10dp"
                            android:layout_margin="16dp"
                            android:elevation="10dp"
                            android:backgroundTint="@color/secondary_main_color"
                            app:layout_constraintTop_toBottomOf="@id/tempNameCard"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            >
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <RadioGroup
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    >
                                    <RadioButton
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="@color/home_card_color"
                                        android:text="Celsius"
                                        android:fontFamily="@font/merriweathersans_regular"
                                        android:textColor="@color/white"
                                        android:textSize="12sp"
                                        android:layout_marginLeft="16dp"
                                        />
                                    <RadioButton
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="@color/home_card_color"
                                        android:text="Kelvin"
                                        android:fontFamily="@font/merriweathersans_regular"
                                        android:textColor="@color/white"
                                        android:textSize="12sp"
                                        android:layout_marginLeft="16dp"
                                        />
                                    <RadioButton
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="@color/home_card_color"
                                        android:text="Fahrenheit"
                                        android:fontFamily="@font/merriweathersans_regular"
                                        android:textColor="@color/white"
                                        android:textSize="12sp"
                                        android:layout_marginLeft="16dp"
                                        />
                                </RadioGroup>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.cardview.widget.CardView>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        >

                        <androidx.cardview.widget.CardView
                            android:id="@+id/windNameCard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            app:cardCornerRadius="10dp"
                            android:elevation="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            >

                            <LinearLayout
                                android:id="@+id/gradientColor3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:background="@drawable/home_gradient_card"
                                android:orientation="horizontal" >
                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Wind Speed"
                                    android:layout_margin="4dp"
                                    android:gravity="center"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/merriweathersans_semibold"
                                    android:textColor="@color/white"
                                    />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="10dp"
                            android:layout_margin="16dp"
                            android:elevation="10dp"
                            android:backgroundTint="@color/secondary_main_color"
                            app:layout_constraintTop_toBottomOf="@id/windNameCard"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            >
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <RadioGroup
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    >
                                    <RadioButton
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="@color/home_card_color"
                                        android:text="Meter / Sec"
                                        android:fontFamily="@font/merriweathersans_regular"
                                        android:textColor="@color/white"
                                        android:textSize="12sp"
                                        android:layout_marginLeft="16dp"
                                        />
                                    <RadioButton
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="@color/home_card_color"
                                        android:text="Miles / Hour"
                                        android:fontFamily="@font/merriweathersans_regular"
                                        android:textColor="@color/white"
                                        android:textSize="12sp"
                                        android:layout_marginLeft="16dp"
                                        />
                                </RadioGroup>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.cardview.widget.CardView>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/secondLinear"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        >

                        <androidx.cardview.widget.CardView
                            android:id="@+id/notificationNameCard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            app:cardCornerRadius="10dp"
                            android:elevation="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            >

                            <LinearLayout
                                android:id="@+id/gradientColor4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:background="@drawable/home_gradient_card"
                                android:orientation="horizontal" >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Notifications"
                                    android:layout_margin="4dp"
                                    android:gravity="center"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/merriweathersans_semibold"
                                    android:textColor="@color/white"
                                    />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="10dp"
                            android:layout_margin="16dp"
                            android:elevation="10dp"
                            android:backgroundTint="@color/secondary_main_color"
                            app:layout_constraintTop_toBottomOf="@id/notificationNameCard"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            >
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <RadioGroup
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    >
                                    <RadioButton
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="@color/home_card_color"
                                        android:text="Enable"
                                        android:fontFamily="@font/merriweathersans_regular"
                                        android:textColor="@color/white"
                                        android:textSize="12sp"
                                        android:layout_marginLeft="16dp"
                                        />
                                    <RadioButton
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="@color/home_card_color"
                                        android:text="Disable"
                                        android:fontFamily="@font/merriweathersans_regular"
                                        android:textColor="@color/white"
                                        android:textSize="12sp"
                                        android:layout_marginLeft="16dp"
                                        />
                                </RadioGroup>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.cardview.widget.CardView>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        >

                        <androidx.cardview.widget.CardView
                            android:id="@+id/NameCard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            app:cardCornerRadius="10dp"
                            android:elevation="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            >

                            <LinearLayout
                                android:id="@+id/gradientColor5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:background="@color/main_app_color"
                                android:orientation="horizontal" >
                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Wind Speed"
                                    android:layout_margin="4dp"
                                    android:gravity="center"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/merriweathersans_semibold"
                                    android:textColor="@color/main_app_color"
                                    />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>