<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bubbleNavigationBar"
        />

    <com.gauravk.bubblenavigation.BubbleNavigationLinearView
        android:id="@+id/bubbleNavigationBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#070723"
        android:orientation="horizontal"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        >

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/homeToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bt_active="true"
            app:bt_colorActive="#ffffff"
            app:bt_colorInactive="#5A5A5A"
            app:bt_shape="@drawable/transition_home"
            app:bt_icon="@drawable/cloud"
            app:bt_title="Home"
            android:fontFamily="@font/merriweathersans_italic"
            />
        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/favToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bt_active="true"
            app:bt_colorActive="#ffffff"
            app:bt_colorInactive="#5A5A5A"
            app:bt_shape="@drawable/transition_home"
            android:layout_marginLeft="32dp"
            app:bt_icon="@drawable/favorite"
            app:bt_title="Favorites"
            android:fontFamily="@font/merriweathersans_bold"
            />
        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/alarmToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bt_active="true"
            app:bt_colorActive="#ffffff"
            app:bt_colorInactive="#5A5A5A"
            app:bt_shape="@drawable/transition_home"
            android:layout_marginLeft="32dp"
            app:bt_icon="@drawable/alarm"
            app:bt_title="Alarms"
            android:fontFamily="@font/merriweathersans_bold"
            />
        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/settingToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            app:bt_active="true"
            app:bt_colorActive="#ffffff"
            app:bt_colorInactive="#5A5A5A"
            app:bt_icon="@drawable/setting"
            app:bt_shape="@drawable/transition_home"
            app:bt_title="Setting"
            android:fontFamily="@font/merriweathersans_bold"
            />
    </com.gauravk.bubblenavigation.BubbleNavigationLinearView>



</androidx.constraintlayout.widget.ConstraintLayout>